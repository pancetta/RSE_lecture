[flake8]
max-line-length = 127
max-complexity = 10
# Ignore some errors common in notebook-style code
ignore = 
    # E402: module level import not at top of file (common in notebooks)
    E402,
    # W293: blank line contains whitespace (jupytext formatting)
    W293,
    # W291: trailing whitespace (jupytext formatting)
    W291,
    # E302, E305: blank line requirements (relaxed for notebooks)
    E302,
    E305,
    # F401: imported but unused (common in notebooks for demonstration)
    F401,
    # F841: assigned but never used (common in notebooks for demonstration)
    F841,
    # E226: missing whitespace around operator (style preference)
    E226,
    # F541: f-string without placeholders
    F541
exclude =
    .git,
    __pycache__,
    .ipynb_checkpoints,
    venv,
    env,
    .venv,
    build,
    dist
